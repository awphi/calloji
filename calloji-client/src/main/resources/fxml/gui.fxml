<BorderPane fx:id="mainBorderPane" minHeight="760" minWidth="1280" prefHeight="760" prefWidth="1280" styleClass="window" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.adamw.calloji.client.gui.GuiController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu fx:id="nicknameMenu" mnemonicParsing="false" text="Calloji User">
               <MenuItem mnemonicParsing="false" onAction="#onEditNicknamePressed" text="Edit Nickname"/>
           </Menu>
       </MenuBar>
   </top>
   <right>
       <TabPane fx:id="rightTabPane" prefHeight="735.0" prefWidth="400.0" side="RIGHT" tabClosingPolicy="UNAVAILABLE"
                BorderPane.alignment="CENTER">
           <Tab text="Chat">
               <VBox prefHeight="735.0" prefWidth="402.0" style="-fx-alignment: center;">
                   <padding>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                   </padding>
                   <ListView fx:id="chatListView" prefHeight="100.0" prefWidth="1000000.0" VBox.vgrow="ALWAYS">
                       <VBox.margin>
                           <Insets bottom="20.0"/>
                       </VBox.margin>
                   </ListView>
                   <HBox prefHeight="0.0" prefWidth="331.0" style="-fx-alignment: center;">
                       <TextField fx:id="chatTextField" onKeyReleased="#onChatKeyUp"
                                  promptText="Enter your message..." HBox.hgrow="ALWAYS">
                           <HBox.margin>
                               <Insets right="20.0"/>
                           </HBox.margin>
                       </TextField>
                       <Button mnemonicParsing="false" onAction="#onChatSubmitted" text="ðŸ¡†"
                               HBox.hgrow="ALWAYS"/>
                   </HBox>
                   <HBox prefHeight="52.0" prefWidth="331.0" style="-fx-alignment: center;">
                       <padding>
                           <Insets bottom="6.0" left="6.0" right="6.0" top="6.0"/>
                       </padding>
                       <Button fx:id="rollDiceButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="102.0"
                               text="Roll Dice"/>
                       <VBox prefHeight="52.0" prefWidth="182.0" HBox.hgrow="ALWAYS">
                           <children>
                               <Text fx:id="turnTimer" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00"
                                     textAlignment="CENTER" wrappingWidth="65.13671875"/>
                           </children>
                           <HBox.margin>
                               <Insets left="6.0"/>
                           </HBox.margin>
                           <styleClass>
                               <String fx:value="centred"/>
                               <String fx:value="button-look"/>
                           </styleClass>
                       </VBox>
                   </HBox>
               </VBox>
           </Tab>
           <Tab fx:id="playersTab" text="Players">
               <BorderPane fx:id="playersBorderPane" prefHeight="200.0" prefWidth="200.0">
                   <padding>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                   </padding>
               </BorderPane>
           </Tab>
           <Tab text="Assets">
               <VBox prefHeight="200.0" prefWidth="100.0">
                   <HBox fx:id="propertyBox" prefHeight="100.0" prefWidth="200.0"
                         style="-fx-border-color: gray; -fx-alignment: center;">
                       <VBox.margin>
                           <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                       </VBox.margin>
                   </HBox>
               </VBox>
           </Tab>
       </TabPane>
   </right>
</BorderPane>
