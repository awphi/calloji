<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" minHeight="760" minWidth="1280" prefHeight="760" prefWidth="1280" styleClass="window" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.adamw.calloji.client.gui.GuiController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="nicknameMenu" mnemonicParsing="false" text="Calloji User">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onEditNicknamePressed" text="Edit Nickname" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <right>
      <TabPane fx:id="rightTabPane" prefHeight="735.0" prefWidth="400.0" side="RIGHT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Chat">
               <content>
                  <VBox prefHeight="735.0" prefWidth="402.0" style="-fx-alignment: center;">
                     <children>
                        <ListView fx:id="chatListView" prefHeight="1000000.0" prefWidth="1000000.0">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </ListView>
                        <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center;">
                           <children>
                              <TextField fx:id="chatTextField" onKeyReleased="#onChatKeyUp" promptText="Enter your message..." HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="20.0" />
                                 </HBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#onChatSubmitted" text="ðŸ¡†" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
          </Tab>
          <Tab fx:id="playersTab" text="Players">
               <content>
                  <BorderPane fx:id="playersBorderPane" prefHeight="200.0" prefWidth="200.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding></BorderPane>
               </content></Tab>
        </tabs>
      </TabPane>
   </right>
</BorderPane>
