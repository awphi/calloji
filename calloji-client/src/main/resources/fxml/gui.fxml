<BorderPane fx:id="mainBorderPane" minHeight="760" minWidth="1280" prefHeight="760" prefWidth="1280" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.adamw.calloji.client.gui.GuiController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu fx:id="nicknameMenu" mnemonicParsing="false" text="Calloji User">
               <MenuItem mnemonicParsing="false" onAction="#onEditNicknamePressed" text="Edit Nickname" />
           </Menu>
         <Menu mnemonicParsing="false" text="Connection">
           <items>
                <MenuItem mnemonicParsing="false" onAction="#onOpenNewConnectionPressed" text="Open New Connection" />
                <MenuItem fx:id="disconnectButton" disable="true" mnemonicParsing="false" onAction="#onDisconnectPressed" text="Disconnect" />
           </items>
         </Menu>
       </MenuBar>
   </top>
   <right>
       <TabPane fx:id="rightTabPane" prefHeight="735.0" prefWidth="400.0" side="RIGHT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <Tab text="Chat">
               <VBox prefHeight="735.0" prefWidth="402.0" style="-fx-alignment: center;">
                   <padding>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                   </padding>
               <BorderPane prefHeight="29.0" prefWidth="331.0">
                  <styleClass>
                     <String fx:value="centred" />
                     <String fx:value="button-look" />
                  </styleClass>
                  <left>
                     <Label fx:id="balanceLabel" text="Balance: Â£1500" BorderPane.alignment="CENTER" />
                  </left>
                  <center>
                     <Label fx:id="getOutOfJailsLabel" text="Get Out of Jail Cards: 0" BorderPane.alignment="CENTER" />
                  </center>
                  <right>
                     <Label fx:id="jailedLabel" text="Jailed: 0" BorderPane.alignment="CENTER" />
                  </right>
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </BorderPane>
                   <ListView fx:id="chatListView" prefHeight="100.0" prefWidth="1000000.0" VBox.vgrow="ALWAYS">
                       <VBox.margin>
                           <Insets bottom="10.0" />
                       </VBox.margin>
                   </ListView>
                   <HBox prefHeight="0.0" prefWidth="331.0" styleClass="centred">
                       <TextField fx:id="chatTextField" onKeyReleased="#onChatKeyUp" promptText="Enter your message..." HBox.hgrow="ALWAYS">
                           <HBox.margin>
                               <Insets right="10.0" />
                           </HBox.margin>
                       </TextField>
                       <Button mnemonicParsing="false" onAction="#onChatSubmitted" text="ðŸ¡†" HBox.hgrow="ALWAYS" />
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                   </HBox>
               <BorderPane prefHeight="41.0" prefWidth="331.0">
                  <left>
                          <Button fx:id="rollDiceButton" disable="true" mnemonicParsing="false" onAction="#onRollDicePressed" prefHeight="48.0" prefWidth="102.0" text="Roll Dice" BorderPane.alignment="CENTER" />
                  </left>
                  <right>
                          <VBox prefHeight="52.0" prefWidth="182.0" BorderPane.alignment="CENTER">
                              <children>
                                  <Label fx:id="turnTimer" text="00:00" textAlignment="CENTER" />
                              </children>
                              <styleClass>
                                  <String fx:value="centred" />
                                  <String fx:value="button-look" />
                              </styleClass>
                          </VBox>
                  </right>
               </BorderPane>
               </VBox>
           </Tab>
           <Tab fx:id="playersTab" text="Players">
               <BorderPane fx:id="playersBorderPane" prefHeight="200.0" prefWidth="200.0">
                   <padding>
                       <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                   </padding>
               </BorderPane>
           </Tab>
           <Tab text="Assets">
               <VBox prefHeight="200.0" prefWidth="100.0">
                   <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-border-color: gray; -fx-alignment: center;">
                       <VBox.margin>
                           <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                       </VBox.margin>
                   </HBox>
               </VBox>
           </Tab>
       </TabPane>
   </right>
</BorderPane>
